<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE6C6"
    tools:context=".defaultprofile">


    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FDE8C4">

        <ImageButton
            android:id="@+id/btnReturn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:contentDescription="Return"
            android:scaleType="centerInside"
            android:src="@drawable/return_button" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/settingsbutton" />
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="750dp"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

<FrameLayout
    android:id="@+id/AvatarContainer"
    android:layout_width="170dp"
    android:layout_height="170dp"
    android:layout_marginTop="25dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/AvatarImage"
            android:layout_width="167dp"
            android:layout_height="164dp"
            android:scaleType="centerCrop"
            android:src="@drawable/createaccountimagegirl"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias=".5" />

    <ImageButton
        android:id="@+id/EditAvatar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="10dp"
        android:contentDescription="@string/edit_avatar"
        android:scaleType="fitXY"
        android:src="@drawable/edit_avatar_button"
        android:background="@android:color/transparent"/>
</FrameLayout>

        <LinearLayout
            android:id="@+id/UsernameContainer"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/profiledefault"
            app:layout_constraintTop_toBottomOf="@id/AvatarContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5">

            <TextView
                android:id="@+id/Username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/orelega_one"
                android:gravity="center"
                android:text="Username"
                android:textColor="#792A00"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/XPContainer"
            android:layout_width="185dp"
            android:layout_height="120dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/profiledefault"
            app:layout_constraintTop_toBottomOf="@id/UsernameContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/AchievementsContainer"
            app:layout_constraintHorizontal_chainStyle="spread">

            <TextView
                android:id="@+id/XPText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/orelega_one"
                android:gravity="center"
                android:text="XP Points"
                android:textColor="#792A00"
                android:textSize="32sp"
                android:textFontWeight="550" />

            <TextView
                android:id="@+id/XPNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/orelega_one"
                android:gravity="center"
                android:text="2,000,000"
                android:textColor="#792A00"
                android:textSize="28sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/AchievementsContainer"
            android:layout_width="185dp"
            android:layout_height="120dp"
            android:layout_marginStart="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/profiledefault"
            app:layout_constraintTop_toTopOf="@id/XPContainer"
            app:layout_constraintStart_toEndOf="@id/XPContainer"
            app:layout_constraintEnd_toEndOf="parent" >

        <TextView
            android:id="@+id/AchievementText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/orelega_one"
            android:gravity="center"
            android:text="Achievements"
            android:textColor="#792A00"
            android:textSize="24sp"
            android:textFontWeight="550"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/AchievementIcon"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_marginEnd="6dp"
                    android:contentDescription="@string/achievement_icon"
                    android:src="@drawable/achievements4_icon" />

                <TextView
                    android:id="@+id/AchievementNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/orelega_one"
                    android:gravity="center"
                    android:text="10/20"
                    android:textColor="#792A00"
                    android:textSize="25sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/DictionaryContainer"
            android:layout_width="385dp"
            android:layout_height="120dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/profiledefault"
            app:layout_constraintTop_toBottomOf="@id/XPContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/DictionaryIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/dictionary_profile_icon"
                android:contentDescription="@string/dictionary_icon" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="start|center_vertical">

                <TextView
                    android:id="@+id/BaybayinDictionary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/orelega_one"
                    android:text="Baybayin Dictionary"
                    android:textColor="#792A00"
                    android:textSize="24sp"
                    android:layout_marginBottom="5dp"
                    android:textFontWeight="550" />

                <ProgressBar
                    android:id="@+id/DictionaryProgressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="285dp"
                    android:layout_height="15dp"
                    android:layout_marginVertical="5dp"
                    android:progress="10"
                    android:max="50"
                    android:progressDrawable="@drawable/dictionarybar"
                    android:background="null"/>

                <TextView
                    android:id="@+id/WordProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/orelega_one"
                    android:text="10/50 Words"
                    android:textColor="#792A00"
                    android:textSize="19sp" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/KnowledgeContainer"
            android:layout_width="385dp"
            android:layout_height="120dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/profiledefault"
            app:layout_constraintTop_toBottomOf="@id/DictionaryContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <ImageView
                android:id="@+id/KnowledgeIcon"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_marginRight="18dp"
                android:contentDescription="@string/knowledge_icon"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/lightbulb_icon" />


            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:orientation="vertical"
                android:gravity="start">


                <TextView
                    android:id="@+id/KnowledgePath"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/orelega_one"
                    android:text="Knowledge Path"
                    android:textColor="#792A00"
                    android:textSize="20sp"
                    android:textFontWeight="550" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="start">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:id="@+id/EasyLabel"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:fontFamily="@font/itim"
                            android:text="Easy"
                            android:textColor="#792A00"
                            android:textSize="16sp"
                            android:gravity="start" />

                        <ProgressBar
                            android:id="@+id/EasyProgress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="200dp"
                            android:layout_height="15dp"
                            android:progress="80"
                            android:max="100"
                            android:progressDrawable="@drawable/easybar"
                            android:background="@null" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:id="@+id/MediumLabel"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:fontFamily="@font/itim"
                            android:text="Medium"
                            android:textColor="#792A00"
                            android:textSize="16sp"
                            android:gravity="start" />

                        <ProgressBar
                            android:id="@+id/MediumProgress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="200dp"
                            android:layout_height="15dp"
                            android:progress="75"
                            android:max="100"
                            android:progressDrawable="@drawable/mediumbar"
                            android:background="@null" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/HardLabel"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:fontFamily="@font/itim"
                            android:text="Hard"
                            android:textColor="#792A00"
                            android:textSize="16sp"
                            android:gravity="start" />

                        <ProgressBar
                            android:id="@+id/HardProgress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="200dp"
                            android:layout_height="15dp"
                            android:progress="20"
                            android:max="100"
                            android:progressDrawable="@drawable/hardbar"
                            android:background="@null" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>

